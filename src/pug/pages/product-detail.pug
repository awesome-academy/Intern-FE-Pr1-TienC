extend ../base/base.pug
block variables
  - const current="/list-page.html"
prepend title
  - var title = "Sản phẩm chi tiết"
block main
  main 
    .container.py-5
      +breadcumb(["Trang chủ","Danh mục sản phẩm"], "Máy khoan CNC 3D")
      .row.mt-5
        .col-lg-3
          +sidebar(categories,"danh mục sản phẩm")
          +productSidebar(products,"sản phẩm khuyến mãi")
        .col-lg-9
          .product-detail
            .product-image
              .product-image__large
                img(src=products[0].image, alt="anh san pham")
              .product-image__small
                -for (var i = 0 ; i < 5 ; i++)
                  img(src="./assets/images/product/product2.png", alt="anh san pham")
            .product-info
              h2=products[0].title
              .rating-comment
                +rating(products[0])
                a(href="#") Gửi bình luận của bạn
              .card-title
                h3=`GNY: ${products[0].price} Đ`
              .card-desc
                h6 Thông tin sản phẩm
                p=products[0].desc
              .card-select
                +select("Size","--Chọn size--",["Small","Medium","Large"])
                +select("Màu sắc","--Chọn màu--",["Yellow","Red"])
              .card-input-quantity
                +inputQuantity(1)
          .product-tab.mt-5.w-100
            ul.nav.nav-tabs
              li.nav-item
                a(data-toggle='tab' href='#infoProduct' class="active show") Thông tin sản phẩm
              li.nav-item.ml-2
                a(data-toggle='tab' href='#review') Đánh giá nhận xét
              li.nav-item.ml-2
                a(data-toggle='tab' href='#tag') Thẻ tags
